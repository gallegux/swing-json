{
  "text": {
    "title":      "Tree Example",
    "click":      "Click Me!",
    "node-root":  "Root",
    "node-foo":   "Foo",
    "node-bar":   "Bar",
    "node-baz":   "Baz",
    "node-blum":  "Blum",
    "node-bleh":  "Bleh"
  },

  "colors": {
    "red": "#ff0000"
  },

  "kids": [{
    "type":     "frame",
    "text":     "title",
    "on-close": "exit",
    "show":     true,
    "pack":     true,

    "layout":   "grid",
    "cols":     1,

    "kids": [{
      "type": "tree",

      "root-visible": false,

      "client-properties": {
        "JTree.lineStyle": "None"
      },

      "cell-renderer": {
        "tree-cell-colors": {
          "selection": {
            "border": "red"
          }
        }
      },

      "root": {
        "text": "node-root",

        "kids": [{
          "text": "node-foo"
        }, {
          "text": "node-bar",

          "kids": [{
            "text": "node-blum"
          }, {
            "text": "node-bleh"
          }]
        }, {
          "text": "node-baz"
        }]
      }
    }]
  }]
}
