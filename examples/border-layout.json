{
  "text": {
    "frame-title":        "SwingJson BorderLayout Example",
    "top-label-text":     "top",
    "left-label-text":    "left",
    "center-label-text":  "Hello World!",
    "right-label-text":   "right",
    "bottom-label-text":  "bottom"
  },

  "kids": [{
    "type": "frame",
    "text": "frame-title",
    "on-close": "exit",
    "show": true,

    "layout": "border",

    "kids": [{
      "type": "label",
      "text": "top-label-text",
      "position": "page-start"
    }, {
      "type": "label",
      "text": "left-label-text",
      "position": "line-start"
    }, {
      "type": "label",
      "text": "center-label-text",
      "position": "center"
    }, {
      "type": "label",
      "text": "right-label-text",
      "position": "line-end"
    }, {
      "type": "label",
      "text": "bottom-label-text",
      "position": "page-end"
    }]
  }]
}
