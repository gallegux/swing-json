{
  "text": {
    "title":      "ComboBox Example",
    "combo":      "ComboBox Test:",
    "cb-item-0":  "Foo",
    "cb-item-1":  "Bar",
    "cb-item-2":  "Baz",
    "cb-item-3":  "Blum"
  },

  "kids": [{
    "type":     "frame",
    "text":     "title",
    "on-close": "exit",
    "show":     true,
    "pack":     true,

    "layout":   "grid",
    "cols":     2,

    "kids": [{
      "type": "label",
      "text": "combo",

      "label-align": {
        "horizontal": "right"
      }
    }, {
      "type": "combobox",

      "items": [
        "cb-item-0",
        "cb-item-1",
        "cb-item-2",
        "cb-item-3"
      ]
    }]
  }]
}
