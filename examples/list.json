{
  "text": {
    "title":  "List Example",

    "item-0": "Foo",
    "item-1": "Bar",
    "item-2": "Baz",
    "item-3": "Blum"
  },

  "kids": [{
    "type":     "frame",
    "text":     "title",
    "on-close": "exit",
    "show":     true,
    "pack":     true,

    "layout":   "grid",
    "cols":     1,

    "kids": [{
      "type": "scroll-pane",

      "kid": {
        "type": "list",

        "selection-mode": "multiple-interval",

        "items": [{
          "text": "item-0"
        }, {
          "text": "item-1",
          "selected": true
        }, {
          "text": "item-2",
          "selected": true
        }, {
          "text": "item-3"
        }]
      }
    }]
  }]
}
