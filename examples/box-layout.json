{
  "text": {
    "frame-title":  "Box Layout Example",
    "top-label":    "header",
    "center-label": "body text",
    "bottom-label": "footer"
  },

  "kids": [{
    "type":     "frame",
    "text":     "frame-title",
    "on-close": "exit",
    "show":     true,

    "layout":   "box",
    "axis":     "page",

    "size": {
      "minimum": [640, 480]
    },

    "kids": [{
      "type": "label",
      "text": "top-label",

      "align": {
        "x": "center"
      }
    }, {
      "type": "horizontal-glue"
    }, {
      "type": "label",
      "text": "center-label",

      "size": {
        "minimum": [640, 480]
      },

      "align": {
        "x": "left"
      }
    }, {
      "type": "rigid-area",
      "size": [100, 50]
    }, {
      "type": "label",
      "text": "bottom-label",

      "align": {
        "x": "left"
      }
    }]
  }]
}
