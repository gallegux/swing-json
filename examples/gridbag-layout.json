{
  "text": {
    "title":      "GridBag Layout Example",
    "top-left":   "Top Left",
    "top-right":  "Top Right",
    "center":     "body text",
    "bottom":     "footer"
  },

  "kids": [{
    "type":     "frame",
    "text":     "title",
    "on-close": "exit",
    "show":     true,
    "pack":     true,

    "layout":   "gridbag",

    "size": {
      "minimum": [640, 480]
    },

    "kids": [{
      "type": "label",
      "text": "top-left",

      "constraints": {
        "gridx": 0,
        "gridy": 0,
        "gridwidth": 1,
        "gridheight": 1,
        "fill": "horizontal"
      }
    }, {
      "type": "label",
      "text": "top-right",

      "constraints": {
        "gridx": 1,
        "gridy": 0,
        "gridwidth": 1,
        "gridheight": 1,
        "fill": "horizontal"
      }
    }, {
      "type": "button",
      "text": "center",


      "constraints": {
        "gridx": 0,
        "gridy": 1,
        "gridwidth": 2,
        "gridheight": 1,
        "fill": "both"
      }
    }, {
      "type": "label",
      "text": "bottom",

      "constraints": {
        "gridx": 0,
        "gridy": 2,
        "gridwidth": 2,
        "gridheight": 1,
        "fill": "horizontal"
      }
    }]
  }]
}
