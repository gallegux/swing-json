{
  "text": {
    "title":    "Slider Example",
    "h-label":  "Horizontal:",
    "v-label":  "Vertical:",
    "10":       "Ten",
    "20":       "Twenty"
  },

  "kids": [{
    "type":     "frame",
    "text":     "title",
    "on-close": "exit",
    "show":     true,
    "pack":     true,

    "layout":   "grid",
    "cols":     1,

    "size": {
      "preferred": [640, 480]
    },

    "kids": [{
      "type": "label",
      "text": "h-label"
    }, {
      "type": "slider",

      "paint": {
        "ticks":  true,
        "labels": true
      },

      "tick-spacing": {
        "major": 10,
        "minor": 5
      },

      "standard-labels": {
        "increment": 20
      },

      "min": 0,
      "max": 100,
      "value": 50
    }, {
      "type": "label",
      "text": "v-label"
    }, {
      "type": "slider",
      "orientation": "vertical",

      "paint": {
        "labels": true
      },

      "labels": {
        "10": {
          "type": "label",
          "text": "10"
        },

        "20": {
          "type": "label",
          "text": "20"
        }
      },

      "min": 0,
      "max": 200,
      "value": 20
    }]
  }]
}
